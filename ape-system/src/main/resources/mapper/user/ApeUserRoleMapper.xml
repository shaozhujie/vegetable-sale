<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ape.apesystem.mapper.ApeUserRoleMapper">
    <select id="getUserRolesSet" resultType="string">
        select
            r.role_key
        from
            ape_user u left join ape_user_role ur on u.id = ur.user_id
            left join ape_role r on ur.role_id = r.id
        <where>
            1=1
            <if test="loginAccount != null and loginAccount != ''">
                and u.login_account = #{loginAccount}
            </if>
        </where>
    </select>
</mapper>